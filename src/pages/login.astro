---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout pageTitle="Login - GPU Control Panel">
  <div class="login-container">
    <div class="login-card">
      <h1>GPU Control Panel</h1>
      <p>Log in to access your on-demand GPU computing resources</p>
      
      <div class="login-button-container">
        <button id="login-button" class="login-button">
          <span class="login-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
          </span>
          Log In with Auth0
        </button>
      </div>
      
      <div class="features">
        <div class="feature">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
            <line x1="8" y1="21" x2="16" y2="21"></line>
            <line x1="12" y1="17" x2="12" y2="21"></line>
          </svg>
          <p>Launch GPU instances on demand</p>
        </div>
        <div class="feature">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
          <p>Pay only for what you use</p>
        </div>
        <div class="feature">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <path d="M16 10a4 4 0 0 1-8 0"></path>
          </svg>
          <p>Run Automatic1111 with one click</p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .login-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
    padding: 2rem;
  }
  
  .login-card {
    background-color: white;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    padding: 3rem;
    max-width: 500px;
    width: 100%;
    text-align: center;
  }
  
  h1 {
    margin-bottom: 0.5rem;
    font-size: 2rem;
    color: #333;
  }
  
  p {
    color: #666;
    margin-bottom: 2rem;
  }
  
  .login-button-container {
    margin: 2rem 0;
  }
  
  .login-button {
    background-color: #635BFF;
    color: white;
    border: none;
    border-radius: 6px;
    padding: 0.75rem 1.5rem;
    font-size: 1.1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    cursor: pointer;
    transition: background-color 0.2s;
  }
  
  .login-button:hover {
    background-color: #4B44E2;
  }
  
  .login-icon {
    margin-right: 8px;
  }
  
  .features {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-top: 3rem;
  }
  
  .feature {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }
  
  .feature svg {
    color: #635BFF;
  }
  
  .feature p {
    font-size: 0.9rem;
    margin: 0;
  }
  
  @media (max-width: 768px) {
    .features {
      grid-template-columns: 1fr;
    }
    
    .login-card {
      padding: 2rem;
    }
  }
</style>

<script>
  import { initAuth0, login } from '../lib/auth';
  
  window.addEventListener('DOMContentLoaded', async () => {
    try {
      // Initialize Auth0 client
      await initAuth0();
      
      // Add click handler to login button
      const loginButton = document.getElementById('login-button');
      if (loginButton) {
        loginButton.addEventListener('click', async () => {
          try {
            await login();
          } catch (error) {
            console.error('Login error:', error);
            alert('Login failed. Please try again.');
          }
        });
      }
    } catch (error) {
      console.error('Auth0 initialization error:', error);
    }
  });
</script>
